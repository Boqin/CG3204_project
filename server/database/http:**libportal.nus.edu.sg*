<script type="text/javascript">
var agent=navigator.userAgent.toLowerCase();
var is_iphone = (agent.indexOf('iphone')!=-1);
var is_black = (agent.indexOf('blackberry')!=-1);
var is_and = (agent.indexOf('android')!=-1);
var is_sym = (agent.indexOf('symbian')!=-1);
var is_windows_ce = (agent.indexOf('windows ce')!=-1);
if (is_iphone) { 
	window.location.href = "mobile/index";
} else if (is_black) {
	window.location.href = "mobile/index";
}else if (is_and) {
	window.location.href = "mobile/index";
}else if (is_sym) {
	window.location.href = "mobile/index";
} else if (is_windows_ce) {
	window.location.href = "mobile/index";
} else {
	window.location.href = "index";
}
</script></html>